extends ../_layouts/base

block content
  - var awsBucketUrl = 'https://s3.eu-central-1.amazonaws.com/wargame-art-blog'
  - var imagePath = awsBucketUrl+'/posts';

  +cover-with-face({
    cover: 'cover1.jpg',
    face: 'photo.jpg',
    name: 'Алексей Усачёв',
    caption: 'Блог про варгеймы и миниатюры'
  })
  +text({
    type: 'key-phrase',
    text: 'Здесь я рассказываю, почему я так люблю варгеймы. Для новичков есть обзорные и вводные статьи, а для опытных игроков - аналитика.  '
  })

  +post-list({list:list})

