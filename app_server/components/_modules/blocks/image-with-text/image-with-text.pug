mixin image-with-text(spec)
  - spec = spec || {}
  - var image = spec.image || spec.src || ''
  - var text = spec.text || spec.src || ''
  - var imageSrc = imagePath+'/320/'+image
  - var srcSet = imagePath+'/640/'+image+' 640w, '
  - srcSet += imagePath+'/1280/'+image+' 1280w, '
  - srcSet += imagePath+'/1980/'+image+' 1980w'

  .row.image-with-text
    .col-xs-12.col-sm-7.col-md-4.col-md-offset-2.col-lg-3.col-lg-offset-3
      p!=text
    .col-xs-12.col-sm-5.col-md-4.col-lg-3
      img.img-responsive.img-zoomable(src=imageSrc srcset=srcSet)
